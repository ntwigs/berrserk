{
  "name": "berrserk",
  "version": "0.2.1",
  "description": "Lightweight TypeScript library for type-safe errors-as-values",
  "repository": "ntwigs/berrserk",
  "license": "MIT",
  "keywords": [
    "typescript",
    "error-handling",
    "error-management",
    "functional",
    "error-as-value",
    "try-catch",
    "runtime-safety",
    "type-safety",
    "zero-dependencies"
  ],
  "type": "module",
  "prettier": "@goatee/prettier",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@goatee/prettier": "^0.0.4",
    "@rslib/core": "^0.5.4",
    "@types/node": "^22.8.1",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.0.8"
  }
}
